	foreground = "#D08770"
	timeout = 6
	icon        = "/home/jaus/.config/dunst/icons/normal.svg" 

[urgency_critical]
	background = "#2E3440"
	foreground = "#BF616A"
	frame_color="#BF616A"
	timeout = 20
        icon        = "/home/jaus/.config/dunst/icons/critical.svg" 


