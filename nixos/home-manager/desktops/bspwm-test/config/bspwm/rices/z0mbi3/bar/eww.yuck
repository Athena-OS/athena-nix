	:geometry (geometry :x "4px" 
						:y "0%" 
						:anchor "left center"
						:height "99%" 
						:width "40px")
	:monitor 0
	:reserve (struts :distance "5px" 
					 :side "left")
	:wm-ignore false
	:hexpand "false"
	:vexpand "false"
(bar))

;; Calendar Windows ;;
(defwindow calendar
	:geometry (geometry :x "95px" 
						:y "70%" 
						:width "270px" 
						:height "60px")
(cal))
